{
  "name": "@sciux/monorepo",
  "type": "module",
  "version": "0.0.7",
  "private": true,
  "packageManager": "pnpm@10.4.0",
  "scripts": {
    "build": "nr -r build",
    "dev": "nr --parallel dev",
    "lint": "eslint --cache .",
    "prepublishOnly": "nr build",
    "docs": "pnpm -C docs run docs:dev",
    "docs:build": "pnpm -C docs run docs:build",
    "release": "bumpp -r && pnpm -r publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "preview": "pnpm vite ./test"
  },
  "dependencies": {
    "mermaid": "^11.8.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@antfu/ni": "catalog:",
    "@antfu/utils": "catalog:",
    "@types/node": "catalog:",
    "bumpp": "catalog:",
    "eslint": "catalog:",
    "lint-staged": "catalog:",
    "pnpm": "catalog:",
    "simple-git-hooks": "catalog:",
    "tsup": "^8.5.0",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
